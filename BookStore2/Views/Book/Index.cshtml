@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary ">Create New</a>
</p>
<table class="table table-bordered table-secondary table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Name)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                @if (item.ImageUrl != null)
                {
                    <img src="~/images/@item.ImageUrl" width="50" class="img-thumbnail" />

                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id },new {@class="btn btn-success" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id },new {@class="btn btn-warning" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id },new {@class="btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
